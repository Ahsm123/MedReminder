@model MedReminder.Shared.DTOs.RegisterDTO

<section class="vh-100" style="background-color: white;">
	<div class="container h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-lg-12 col-xl-11">
				<div class="card text-black" style="border-radius: 25px;">
					<div class="card-body p-md-5">
						<div class="row justify-content-center">
							<!-- Left Form Section -->
							<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
								<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4" id="form-title">Opret dig selv her!</p>


								<div class="container mt-5" style="max-width: 400px;">
									<form asp-action="Register" method="post" class="p-4 shadow rounded bg-white">
										<div class="form-floating mb-3">
											<input asp-for="FirstName" class="form-control" id="floatingFirstName" placeholder="First Name" type="text" required>
											<label for="floatingFirstName">First Name</label>
										</div>
										<div class="form-floating mb-3">
											<input asp-for="LastName" class="form-control" id="floatingLastName" placeholder="Last Name" type="text" required>
											<label for="floatingLastName">Last Name</label>
										</div>
										<div class="form-floating mb-3">
											<input asp-for="Email" class="form-control" id="floatingEmail" placeholder="name@example.com" type="email" required>
											<label for="floatingEmail">Email</label>
										</div>
										<div class="form-floating mb-3">
											<input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password" type="password" required>
											<label for="floatingPassword">Password</label>
										</div>
										
										<button type="submit" class="btn btn-primary w-100">Register</button>
										<div class="mt-3 text-center">
											<a asp-action="Login" class="text-muted small">Already have an account? Login here.</a>
										</div>
									</form>
								</div>


								<form asp-action="Login" method="post" id="login-form" class="mx-1 mx-md-4" style="display: none;">
									<div class="d-flex flex-row align-items-center mb-4">
										<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
										<div class="form-outline flex-fill mb-0">
											<input class="form-control" id="loginEmail" name="Email" type="email" />
											<label class="form-label" for="loginEmail">Email</label>
										</div>
									</div>

									<div class="d-flex flex-row align-items-center mb-4">
										<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
										<div class="form-outline flex-fill mb-0">
											<input class="form-control" id="loginPassword" name="Password" type="password" />
											<label class="form-label" for="loginPassword">Kodeord</label>
										</div>
									</div>

									<div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
										<button type="submit" class="btn btn-danger btn-lg">Login</button>
									</div>
								</form>

								<div class="text-center">
									<button class="btn btn-link" id="toggle-to-register" style="display: none;">Ny bruger? Registrer her</button>
								</div>
							</div>

							<!-- Right Picture Section -->
							<div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
								<img src="/images/Logo.png" class="img-fluid" alt="Sample image" />
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	document.getElementById('toggle-to-login').addEventListener('click', function () {
		document.getElementById('register-form').style.display = 'none';
		document.getElementById('login-form').style.display = 'block';
		document.getElementById('form-title').textContent = 'Login her!';
		this.style.display = 'none';
		document.getElementById('toggle-to-register').style.display = 'block';
	});

	document.getElementById('toggle-to-register').addEventListener('click', function () {
		document.getElementById('login-form').style.display = 'none';
		document.getElementById('register-form').style.display = 'block';
		document.getElementById('form-title').textContent = 'Opret dig selv her!';
		this.style.display = 'none';
		document.getElementById('toggle-to-login').style.display = 'block';
	});
</script>
