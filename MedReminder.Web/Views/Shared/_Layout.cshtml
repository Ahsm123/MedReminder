<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediHusk</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Existing Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedReminder.Web.styles.css" asp-append-version="true" />
    <style>
        /* Ensure full height for the page wrapper */
        .main-wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Full viewport height */
        }

        /* Main content grows to fill available space */
        .main-content {
            flex: 1;
        }

        /* Footer styling */
        .sticky-footer {
            background-color: #f8f9fa;
            color: #6c757d;
            text-align: center;
            padding: 10px 0;
            border-top: 1px solid #dee2e6;
        }

            .sticky-footer a {
                color: #007bff;
                text-decoration: none;
            }

                .sticky-footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="main-wrapper">
        <header>
            <nav class="navbar navbar-expand-lg custom-navbar">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logomini.png" alt="MediHusk Logo" class="img-fluid logo-img" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="Index">Hjem</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="Privacy">Om Medihusk</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger" asp-controller="Medication" asp-action="DailySchedule">Daglig Plan</a>
                            </li>
                            <li class="nav-item">
                                @if (Context.Request.Cookies["JwtToken"] != null)
                                {
                                    <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Log ud</a>
                                }
                                else
                                {
                                    <a class="btn btn-danger" asp-controller="Account" asp-action="Login">Login</a>
                                }
                            </li>
                            @if (Context.Request.Cookies["JwtToken"] == null)
                            {
                                <li class="nav-item">
                                    <a class="btn btn-danger" asp-controller="Account" asp-action="Register">Register</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="btn btn-danger" asp-area="" asp-controller="User" asp-action="Index">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                                    </svg>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- Main Content -->
        <div class="main-content">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        <!-- Footer -->
        <footer class="sticky-footer">
            <div class="container">
                &copy; 2024 - MedReminder.Web -
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
