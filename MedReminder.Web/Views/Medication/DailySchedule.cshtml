@model List<MedicationDTO>

@{
    ViewData["Title"] = "Daglig Medicinplan";
    var selectedDate = ViewBag.SelectedDate as DateTime? ?? DateTime.UtcNow.Date;
}

<h1 class="text-center">Daglig Medicinplan</h1>

<div class="container text-center mt-4">
    <form method="get" asp-action="DailySchedule" asp-controller="Medication">
        <label for="date">Vælg dato:</label>
        <input type="date" id="date" name="date" value="@selectedDate.ToString("yyyy-MM-dd")" class="form-control-inline">
        <button type="submit" class="btn btn-primary">Vis</button>
    </form>

    <div class="mt-3">
        <a asp-action="DailySchedule" asp-controller="Medication" asp-route-date="@selectedDate.AddDays(-1).ToString("yyyy-MM-dd")" class="btn btn-outline-secondary">Forrige Dag</a>
        <a asp-action="DailySchedule" asp-controller="Medication" asp-route-date="@selectedDate.AddDays(1).ToString("yyyy-MM-dd")" class="btn btn-outline-secondary">Næste Dag</a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="container mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tid</th>
                    <th>Medicin</th>
                    <th>Dosis</th>
                    <th>Instruktioner</th>
                    <th>Gentagelse</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var medication in Model.OrderBy(m => m.TimeToTake))
                {
                    <tr>
                        <td>@medication.TimeToTake.ToString(@"hh\:mm")</td>
                        <td>@medication.Name</td>
                        <td>@medication.Dosage @medication.DosageUnit</td>
                        <td>@medication.Instructions</td>
                        <td>@medication.RecurrencePattern</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}
else
{
    <p class="text-center mt-4">Ingen medicin planlagt for @selectedDate.ToShortDateString().</p>
}
