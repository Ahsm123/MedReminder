@model MedReminder.Shared.DTOs.MedicationDTO

@{
    ViewData["Title"] = "Tilføj medicin";
}

<h1>Tilføj medicin</h1>

<form asp-controller="Medication" asp-action="Create" method="post">
    <input type="hidden" asp-for="UserId" value="@Model.UserId" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Dosage" class="form-label">Dosage</label>
        <input asp-for="Dosage" class="form-control" type="number" required />
        <span asp-validation-for="Dosage" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DosageUnit" class="form-label">Dosage Unit</label>
        <input asp-for="DosageUnit" class="form-control" required />
        <span asp-validation-for="DosageUnit" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TimeToTake" class="form-label">Tidspunkt</label>
        <select asp-for="TimeToTake" class="form-select">
            @foreach (var time in Model.TimeOptions)
            {
                <option value="@time">@time</option>
            }
        </select>
        <span asp-validation-for="TimeToTake" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="RecurrencePattern" class="form-label">Gentagelse</label>
        <textarea asp-for="RecurrencePattern" class="form-control" rows="3"></textarea>
        <span asp-validation-for="RecurrencePattern" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label">Start Date</label>
        <input asp-for="StartDate" class="form-control" type="date" required />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label">End Date</label>
        <input asp-for="EndDate" class="form-control" type="date" required />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Instructions" class="form-label">Instructions</label>
        <textarea asp-for="Instructions" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Instructions" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger">Tilføj</button>
    <a asp-controller="User" asp-action="Index" asp-route-userId="@Model.UserId" class="btn btn-primary">Annuller</a>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}


